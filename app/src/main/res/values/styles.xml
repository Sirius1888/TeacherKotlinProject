<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">@dimen/text_size_20_sp</item>
        <item name="android:textColor">@color/colorHeaderText</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="SubHeaderText">
        <item name="android:textSize">@dimen/text_size_20_sp</item>
        <item name="android:textColor">@color/colorSubheaderText</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/black_bgr</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>